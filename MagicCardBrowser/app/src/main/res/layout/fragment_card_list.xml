<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="xyz.gitsieg.magiccardbrowser.gui_pkg.CardListFragment">

    <TextView
        android:id="@+id/cardListHeader"
        android:text="Cards matching search criteria"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:paddingVertical="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/cardListHeader"
        android:id="@+id/recyclerCardList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
