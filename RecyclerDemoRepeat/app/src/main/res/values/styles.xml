<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base county details style-->
    <style name="base_county_style">
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="item_details">
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="base_county_lbl_style" parent="base_county_style">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
